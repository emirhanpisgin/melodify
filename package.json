{
  "name": "songulfy",
  "productName": "songulfy",
  "version": "1.0.7",
  "description": "My Electron application description",
  "main": ".webpack/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "npm run package",
    "package": "electron-builder",
    "publish": "electron-builder --publish always",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emirhanpisgin/songulfy.git"
  },
  "keywords": [],
  "author": {
    "name": "emirhanpisgin",
    "email": "emirhanpgt@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "@types/electron-store": "^1.3.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/spotify-web-api-node": "^5.0.11",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "autoprefixer": "^10.4.21",
    "css-loader": "^6.11.0",
    "electron": "36.5.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.523.0",
    "node-fetch": "^3.3.2",
    "ps-list": "^8.1.1",
    "pusher-js": "^8.4.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "spotify-web-api-node": "^5.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "zod": "^3.25.74"
  },
  "build": {
    "productName": "Songulfy",
    "appId": "com.emirhanpisgin.songulfy",
    "files": [
      ".webpack/**/*",
      "package.json",
      "assets/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "emirhanpisgin",
      "repo": "songulfy"
    }
  }
}
